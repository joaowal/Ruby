<p id="notice"><%= notice %></p>
<h1>Todos de Contatos</h1>
<%= form_tag(contatos_path, :method => :get) do %>
	<%= text_field_tag 'estado', nil, placeholder: 'Digite o estado'%> &nbsp;E&nbsp;	
	<%= text_field_tag 'idade', nil, placeholder: 'Digite a idade'%>
	<%= submit_tag "Pesquisar" %>
<%end%>
<br>
<table border="1">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Idade</th>
      <th>Estado</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.email %></td>
        <td><%= contato.idade %></td>
        <td><%= contato.estado %></td>
        <td><%= contato.cargo %></td>
        <td><%= link_to 'Detalhes', contato %></td>
        <td><%= link_to 'Editar', edit_contato_path(contato) %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

