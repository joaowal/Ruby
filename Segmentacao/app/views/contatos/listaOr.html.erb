<p id="notice"><%= notice %></p>
<h1>Lista de Contatos por Cargo OU Estado</h1>

<table border="1">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Idade</th>
      <th>Estado</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.email %></td>
        <td><%= contato.idade %></td>
        <td><%= contato.estado %></td>
        <td><%= contato.cargo %></td>
        <td><%= link_to 'Detalhes', contato %></td>
        <td><%= link_to 'Editar', edit_contato_path(contato) %></td>
        <td><%= link_to 'Deletar', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

